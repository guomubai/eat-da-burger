	<h1>East some burgers!</h1>

	<h2>Some burgers to eat</h2>

	<ul>
		{{#each burgers}}
			{{#unless devoured}}
				{{> burgers/burger-block devoured=true}}
			{{/unless}}
		{{/each}}
	</ul>

	<h2>Burgers that you ate already. . .</h2>

		<ul>
		{{#each burgers}}
			{{#if devoured}}
				{{> burgers/burger-block devoured=true}}
			{{/if}}
		{{/each}}
	</ul>

	<h2>Add a Burger</h2>
	<form class="create-form">

  <div class="form-group">
    <label for="bu">Burger Name:</label>
    <input type="text" id="bu" name="name">
  </div>

  <div class="form-group">
    <label for="Devoured">Devoured?</label><br>
    <input type="radio" name="devoured" value="1" checked> Devoured!<br>
    <input type="radio" name="devoured" value="0"> Not devoured
  </div>

  <button type="submit">Add Burger</button>
</form>


